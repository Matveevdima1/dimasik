<Page x:Class="bd2.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bd2.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Height="350" Width="800" Background="White">
        <StackPanel Margin="184,44,184,150">
            <TextBlock Text="Введите логин:" Margin="5"/>
            <TextBox Name="txbLogin" Margin="5"></TextBox>
            <TextBlock Text="Введите пароль:" Margin="5"/>
            <PasswordBox x:Name="psPassword" Margin="5"></PasswordBox>
            <Button Content="Войти" Click="Button_Click"></Button>
            <Button Content="Регистрация" Click="Button_Click_1"></Button>
        </StackPanel>
    </Grid>
</Page>
